import java.util.Scanner ;
public class Lab01v2_04
{ public static void main (String[]args)
  { Scanner scan = new Scanner(System.in) ;
  int h;
  int c;
  int i;
  int n = 1;
  int j ;
  h=scan.nextInt() ;
  for(i=0;i<h;i++)
  {
    for(c=0; c<n ; c++)
    { for(j=0; j<h; h--)
      {
      System.out.print(" ") ;
}
    System.out.print("*");
    }
    System.out.println() ;
    n++;
}
}
}